<style>
	main {
		margin: auto;
		padding: 2rem 1rem;
		max-width: 900px;
		user-select: none;
		-webkit-user-select: none;
		-moz-user-select: none;
		-ms-user-select: none;
	}
	h1 {
		font-size: 2.5rem;
		font-weight: 700;
		line-height: 1.2;
		margin-bottom: 2rem;
		text-align: center;
		color: var(--c-text);
	}
	h1 span {
		position: relative;
		z-index: 1;
	}
	h1 span::after {
		content: '';
		position: absolute;
		bottom: 2px;
		left: 0;
		width: 100%;
		height: 8px;
		background: rgba(0,0,0,0.05);
		z-index: -1;
		border-radius: 4px;
	}
	
	.intro {
		text-align: center;
		margin-bottom: 3rem;
		padding: 1.5rem;
		background: var(--c-card-bg);
		border-radius: var(--radius-card);
		box-shadow: var(--shadow-light);
	}
	.intro p {
		margin: 0.5rem 0;
		color: var(--c-text-light);
		font-size: 1.1rem;
	}
	
	.section-title {
		font-size: 1.5rem;
		font-weight: 600;
		margin-bottom: 1.5rem;
		color: var(--c-text);
	}
	
	.friends-section {
		margin-bottom: 3rem;
	}
	
	.placeholder-card {
		background: var(--c-card-bg);
		padding: 3rem 2rem;
		border-radius: var(--radius-card);
		box-shadow: var(--shadow-light);
		text-align: center;
		border: 2px dashed rgba(56, 182, 255, 0.3);
		transition: all 0.3s ease;
	}
	.placeholder-card:hover {
		border-color: var(--c-primary);
		box-shadow: var(--shadow-hover);
	}
	.placeholder-card p {
		margin: 0.5rem 0;
		color: var(--c-text-light);
	}
	.placeholder-text {
		font-size: 0.95rem;
		font-style: italic;
	}
	
	.contact-info {
		background: var(--c-card-bg);
		padding: 2rem;
		border-radius: var(--radius-card);
		box-shadow: var(--shadow-light);
	}
	.contact-info p {
		margin: 0.5rem 0;
		color: var(--c-text-light);
		font-size: 1.1rem;
	}
	.contact-info a {
		color: var(--c-primary);
		text-decoration: none;
		transition: color 0.2s;
	}
	.contact-info a:hover {
		color: var(--c-secondary);
	}
</style>
