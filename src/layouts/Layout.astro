---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Comfortaa:wght@300;400;500;600;700&family=Zhi+Mang+Xing&family=Noto+Sans+SC:wght@300;400;500&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<nav>
				<a href="/" class="nav-brand">言西<span>早木</span></a>
				<div class="nav-links">
					<a href="/">首页</a>
					<a href="/blog">文章</a>
					<a href="/about">关于</a>
				</div>
				<div id="header-status" class="header-status">
					<span id="current-date">加载中...</span>
					<span id="current-region">获取位置...</span>
					<span id="current-weather">获取天气...</span>
				</div>
			</nav>
		</header>
		<slot />
		
		<footer>
			<div class="footer-content">
				<p>&copy; {new Date().getFullYear()} 言西早木的Blog. All rights reserved.</p>
				<div class="footer-links">
					<a href="/about">关于</a>
					<a href="https://github.com/cong1ling" target="_blank" rel="noopener noreferrer">GitHub</a>
					<a href="mailto:tanshujian@linux.do,tanshujian131@qq.com" title="发送邮件">Email 邮箱</a>
				</div>
			</div>
		</footer>

		<!-- Live2D Widget -->
		<script src="https://fastly.jsdelivr.net/gh/stevenjoezhang/live2d-widget@latest/autoload.js"></script>

		<script is:inline>
			// Real-time Date & Weather Logic
			function updateDate() {
				const now = new Date();
				const options = { month: 'long', day: 'numeric', weekday: 'short' };
				document.getElementById('current-date').textContent = now.toLocaleDateString('zh-CN', options);
			}

			async function updateWeather() {
				const weatherEl = document.getElementById('current-weather');
				const regionEl = document.getElementById('current-region');
				try {
					// Use wttr.in with %l for location name
					const response = await fetch('https://wttr.in/?format=%l|%c+%t&m');
					if (response.ok) {
						const text = await response.text();
						const [region, weather] = text.split('|');
						regionEl.textContent = region.trim() || '未知地区';
						weatherEl.textContent = weather.trim();
						
						// Integration with Live2D (if available)
						if (window.showMessage) {
							if (weather.includes('Rain') || weather.includes('雨')) {
								window.showMessage('外面好像在下雨呢，记得带伞哦~', 5000);
							} else if (weather.includes('Sun') || weather.includes('晴')) {
								window.showMessage('天气真好，一起去散步吧！', 5000);
							}
						}
					} else {
						weatherEl.textContent = '无法获取天气';
						regionEl.textContent = '未知地区';
					}
				} catch (e) {
					weatherEl.textContent = '天气离线';
					regionEl.textContent = '定位离线';
				}
			}

			// Initial call and refresh
			updateDate();
			updateWeather();
			setInterval(updateDate, 60000); // Update time every minute
		</script>
	</body>
</html>
<style is:global>
	:root {
		/* Vibrant Palette: Sky Blue & Pink */
		--c-primary: #38b6ff;      /* Vivid Sky Blue */
		--c-primary-light: #8ce1ff;
		--c-primary-dark: #008ecc;
		
		--c-secondary: #ff6b95;    /* Soft Hot Pink */
		--c-secondary-light: #ff9eb9;
		--c-secondary-dark: #cc4d6e;
		
		--c-tertiary: #a855f7;     /* Soft Purple */
		--c-tertiary-light: #c084fc;

		--c-brand: var(--c-primary);
		--c-brand-light: var(--c-primary-light);
		--c-brand-dark: var(--c-primary-dark);
		
		--c-text: #2c3e50;         
		--c-text-light: #7f8c8d;
		
		/* Subtle mesh gradient background effect colors */
		--c-bg-gradient-start: #f0f9ff;
		--c-bg-gradient-end: #fff0f5;
		--c-background: #ffffff;
		--c-card-bg: rgba(255, 255, 255, 0.9);
		
		--shadow-light: 0 4px 20px rgba(56, 182, 255, 0.1);
		--shadow-hover: 0 10px 35px rgba(255, 107, 149, 0.2);
		
		--radius-card: 16px;
		--radius-btn: 50px;
		
		--padding-card: 1.8rem;
		
		/* Soft Rounded Fonts */
		--font-family-base: 'Comfortaa', 'Noto Sans SC', sans-serif;
		--font-special: 'Zhi Mang Xing', cursive;
	}
	
	html[data-theme='dark'] {
		--c-brand: #d1d1d1;
		--c-brand-light: #a0a0a0;
		--c-brand-dark: #ffffff;
		
		--c-text: #e0e0e0;         /* Soft White */
		--c-text-light: #a0a0a0;
		--c-background: #0f1115;   /* Deeper Dreamy Black */
		--c-card-bg: rgba(30, 31, 35, 0.7);
		
		--shadow-light: 0 4px 25px rgba(0, 0, 0, 0.4);
		--shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.4);
	}
	
	html {
		font-family: var(--font-family-base);
		background: var(--c-background);
		color: var(--c-text);
		line-height: 1.7;          /* Increased line height for comfort */
		transition: background 0.4s ease, color 0.4s ease;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		overflow-x: hidden;
		background: var(--c-background);
		/* Enhanced dreamy mesh gradient background */
		background-image: 
			radial-gradient(circle at 10% 20%, rgba(56, 182, 255, 0.12), transparent 30%), 
			radial-gradient(circle at 90% 80%, rgba(255, 107, 149, 0.12), transparent 30%),
			radial-gradient(circle at 50% 50%, rgba(168, 85, 247, 0.1), transparent 45%),
			radial-gradient(circle at 80% 10%, rgba(0, 200, 255, 0.05), transparent 25%),
			radial-gradient(circle at 20% 90%, rgba(255, 107, 149, 0.05), transparent 25%);
		background-attachment: fixed;
		position: relative;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: 
			radial-gradient(circle at 20% 30%, rgba(56, 182, 255, 0.15), transparent 45%),
			radial-gradient(circle at 80% 70%, rgba(255, 107, 149, 0.15), transparent 45%);
		filter: blur(80px);
		z-index: -2;
		animation: floating-blobs-1 25s ease-in-out infinite alternate;
	}

	body::after {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: 
			radial-gradient(circle at 70% 20%, rgba(168, 85, 247, 0.1), transparent 45%),
			radial-gradient(circle at 30% 80%, rgba(0, 200, 255, 0.1), transparent 45%);
		filter: blur(100px);
		z-index: -1;
		animation: floating-blobs-2 30s ease-in-out infinite alternate-reverse;
		pointer-events: none;
	}

	@keyframes floating-blobs-1 {
		0% { transform: translate(0, 0) rotate(0deg) scale(1); }
		50% { transform: translate(3%, 5%) rotate(5deg) scale(1.1); }
		100% { transform: translate(-2%, 2%) rotate(-5deg) scale(1.05); }
	}

	@keyframes floating-blobs-2 {
		0% { transform: translate(0, 0) rotate(0deg) scale(1.1); }
		50% { transform: translate(-4%, -6%) rotate(-3deg) scale(1); }
		100% { transform: translate(2%, -3%) rotate(3deg) scale(1.15); }
	}
	
	header {
		padding: 0.8rem 1.5rem;
		background: rgba(255, 255, 255, 0.4);
		backdrop-filter: blur(12px) saturate(180%);
		-webkit-backdrop-filter: blur(12px) saturate(180%);
		position: sticky;
		top: 0;
		z-index: 100;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
		border-bottom: 1px solid rgba(255, 255, 255, 0.2);
		transition: all 0.3s ease;
	}
	
	.header-status {
		display: flex;
		gap: 1rem;
		font-size: 0.85rem;
		color: var(--c-text-light);
		padding-left: 1rem;
		border-left: 1px solid rgba(0, 0, 0, 0.1);
		margin-left: 1rem;
	}

	html[data-theme='dark'] .header-status {
		border-left-color: rgba(255, 255, 255, 0.1);
	}

	@media (max-width: 768px) {
		.header-status {
			display: none; /* Hide on small screens for cleaner layout */
		}
	}

	html[data-theme='dark'] header {
		background: rgba(24, 25, 26, 0.4);
		border-bottom: 1px solid rgba(255, 255, 255, 0.05);
	}

	nav {
		max-width: 1100px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 3.5rem;
	}
	
	.nav-brand {
		font-family: 'Outfit', sans-serif;
		font-weight: 800;
		font-size: 1.6rem;
		color: var(--c-text);
		text-decoration: none;
		letter-spacing: -0.02em;
		transition: transform 0.2s;
	}
	
	.nav-brand:hover {
		transform: scale(1.02);
	}
	
	.nav-brand span {
		background: linear-gradient(135deg, var(--c-primary), var(--c-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.nav-links {
		display: flex;
		gap: 0.8rem;
	}
	
	.nav-links a {
		text-decoration: none;
		color: var(--c-text-light);
		font-weight: 600;
		font-size: 0.95rem;
		padding: 0.6rem 1.2rem;
		border-radius: 2rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		background: transparent;
	}
	
	.nav-links a::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(56, 182, 255, 0.1), rgba(255, 107, 149, 0.1));
		transform: translateY(100%);
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		z-index: -1;
		border-radius: 2rem;
	}
	
	.nav-links a:hover {
		color: var(--c-primary-dark);
		transform: translateY(-1px);
	}
	
	.nav-links a:hover::before {
		transform: translateY(0);
	}


	
	footer {
		margin-top: 4rem;
		padding: 3rem 1rem;
		background: rgba(255, 255, 255, 0.4);
		backdrop-filter: blur(10px);
		border-top: 1px solid rgba(255, 255, 255, 0.3);
		text-align: center;
	}
	
	.footer-content {
		max-width: 1000px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		color: var(--c-text-light);
		gap: 1rem;
	}
	
	.footer-links {
		display: flex;
		gap: 1.5rem;
	}
	
	.footer-links a {
		color: var(--c-text-light);
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.2s;
	}
	
	.footer-links a:hover {
		color: var(--c-brand);
	}
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	/* --- Live2D Widget Dreamy Customization --- */
	#waifu-tips {
		background: rgba(255, 255, 255, 0.45) !important;
		backdrop-filter: blur(10px) !important;
		border: 1px solid rgba(255, 255, 255, 0.3) !important;
		border-radius: 15px !important;
		box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05) !important;
		font-family: var(--font-family-base) !important;
		color: var(--c-text) !important;
	}

	html[data-theme='dark'] #waifu-tips {
		background: rgba(30, 31, 35, 0.6) !important;
		border-color: rgba(255, 255, 255, 0.1) !important;
		color: #eee !important;
	}

	#waifu #live2d {
		cursor: grab !important;
	}

	#waifu #live2d:active {
		cursor: grabbing !important;
	}

	.waifu-tool span {
		background: rgba(255, 255, 255, 0.5) !important;
		backdrop-filter: blur(5px) !important;
		border-radius: 50% !important;
		color: var(--c-primary) !important;
		transition: all 0.3s ease !important;
	}

	.waifu-tool span:hover {
		background: var(--c-primary) !important;
		color: white !important;
		transform: scale(1.1);
	}

	@media (max-width: 768px) {
		#waifu {
			display: none !important; /* Hide on mobile to avoid clutter */
		}
	}
	/* --- End Live2D Customization --- */

	* {
		box-sizing: border-box;
	}
</style>
