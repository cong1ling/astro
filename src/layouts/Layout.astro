---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&family=Ma+Shan+Zheng&display=swap" rel="stylesheet">
	</head>
	<body>
		<header>
			<nav>
				<a href="/" class="nav-brand">Blog</a>
				<div class="nav-links">
					<a href="/">首页</a>
					<a href="/blog">文章</a>
					<a href="/about">关于</a>
				</div>
			</nav>
		</header>
		<slot />
		
		<footer>
			<div class="footer-content">
				<p>&copy; {new Date().getFullYear()} Tan先生的Blog. All rights reserved.</p>
				<div class="footer-links">
					<a href="/about">关于</a>
					<a href="https://github.com/yourusername" target="_blank">GitHub</a>
				</div>
			</div>
		</footer>

		<!-- Live2D Widget -->
		<script src="https://fastly.jsdelivr.net/gh/stevenjoezhang/live2d-widget@latest/autoload.js"></script>
	</body>
</html>
<style is:global>
	:root {
		/* Vibrant Palette: Sky Blue & Pink */
		--c-primary: #38b6ff;      /* Vivid Sky Blue */
		--c-primary-light: #8ce1ff;
		--c-primary-dark: #008ecc;
		
		--c-secondary: #ff6b95;    /* Soft Hot Pink */
		--c-secondary-light: #ff9eb9;
		--c-secondary-dark: #cc4d6e;

		--c-brand: var(--c-primary);
		--c-brand-light: var(--c-primary-light);
		--c-brand-dark: var(--c-primary-dark);
		
		--c-text: #2c3e50;         
		--c-text-light: #7f8c8d;
		
		/* Subtle mesh gradient background effect colors */
		--c-bg-gradient-start: #f0f9ff;
		--c-bg-gradient-end: #fff0f5;
		--c-background: #ffffff;
		--c-card-bg: rgba(255, 255, 255, 0.9);
		
		--shadow-light: 0 4px 20px rgba(56, 182, 255, 0.1);
		--shadow-hover: 0 10px 35px rgba(255, 107, 149, 0.2);
		
		--radius-card: 16px;
		--radius-btn: 50px;
		
		--padding-card: 1.8rem;
		
		/* Soft Serif for comfort, Sans for headers */
		--font-family-base: 'Outfit', 'Noto Serif SC', -apple-system, system-ui, sans-serif;
		--font-special: 'Ma Shan Zheng', cursive;
	}
	
	html[data-theme='dark'] {
		--c-brand: #d1d1d1;
		--c-brand-light: #a0a0a0;
		--c-brand-dark: #ffffff;
		
		--c-text: #e0e0e0;         /* Soft White */
		--c-text-light: #a0a0a0;
		--c-background: #18191a;   /* Soft Black */
		--c-card-bg: #242526;
		
		--shadow-light: 0 4px 20px rgba(0, 0, 0, 0.3);
		--shadow-hover: 0 8px 30px rgba(0, 0, 0, 0.4);
	}
	
	html {
		font-family: var(--font-family-base);
		background: var(--c-background);
		color: var(--c-text);
		line-height: 1.7;          /* Increased line height for comfort */
		transition: background 0.4s ease, color 0.4s ease;
	}
	
	body {
		margin: 0;
		padding: 0;
		min-height: 100vh;
		overflow-x: hidden;
		background: var(--c-background);
		/* Subtle mesh gradient background */
		background-image: 
			radial-gradient(circle at 15% 50%, rgba(56, 182, 255, 0.08), transparent 25%), 
			radial-gradient(circle at 85% 30%, rgba(255, 107, 149, 0.08), transparent 25%);
		background-attachment: fixed;
	}
	
	header {
		padding: 0.8rem 1.5rem;
		background: rgba(255, 255, 255, 0.6);
		backdrop-filter: blur(16px);
		-webkit-backdrop-filter: blur(16px);
		position: sticky;
		top: 0;
		z-index: 100;
		box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.02), 0 2px 4px -1px rgba(0, 0, 0, 0.02);
		border-bottom: 1px solid rgba(255, 255, 255, 0.3);
		transition: all 0.3s ease;
	}
	
	html[data-theme='dark'] header {
		background: rgba(30, 30, 30, 0.8);
	}

	nav {
		max-width: 1100px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		height: 3.5rem;
	}
	
	.nav-brand {
		font-family: 'Outfit', sans-serif;
		font-weight: 800;
		font-size: 1.6rem;
		color: var(--c-text);
		text-decoration: none;
		letter-spacing: -0.02em;
		transition: transform 0.2s;
	}
	
	.nav-brand:hover {
		transform: scale(1.02);
	}
	
	.nav-brand span {
		background: linear-gradient(135deg, var(--c-primary), var(--c-secondary));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.nav-links {
		display: flex;
		gap: 0.8rem;
	}
	
	.nav-links a {
		text-decoration: none;
		color: var(--c-text-light);
		font-weight: 600;
		font-size: 0.95rem;
		padding: 0.6rem 1.2rem;
		border-radius: 2rem;
		transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		position: relative;
		overflow: hidden;
		background: transparent;
	}
	
	.nav-links a::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: linear-gradient(135deg, rgba(56, 182, 255, 0.1), rgba(255, 107, 149, 0.1));
		transform: translateY(100%);
		transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
		z-index: -1;
		border-radius: 2rem;
	}
	
	.nav-links a:hover {
		color: var(--c-primary-dark);
		transform: translateY(-1px);
	}
	
	.nav-links a:hover::before {
		transform: translateY(0);
	}


	
	footer {
		margin-top: 4rem;
		padding: 3rem 1rem;
		background: rgba(255, 255, 255, 0.4);
		backdrop-filter: blur(10px);
		border-top: 1px solid rgba(255, 255, 255, 0.3);
		text-align: center;
	}
	
	.footer-content {
		max-width: 1000px;
		margin: 0 auto;
		display: flex;
		flex-direction: column;
		align-items: center;
		color: var(--c-text-light);
		gap: 1rem;
	}
	
	.footer-links {
		display: flex;
		gap: 1.5rem;
	}
	
	.footer-links a {
		color: var(--c-text-light);
		text-decoration: none;
		font-size: 0.9rem;
		transition: color 0.2s;
	}
	
	.footer-links a:hover {
		color: var(--c-brand);
	}
	
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
	* {
		box-sizing: border-box;
	}
</style>
