---
interface Props {
	title: string;
	href: string;
	body?: string;
	date?: Date;
	tags?: string[];
	readingTime?: number;
	external?: boolean;
}

const { href, title, body, date, tags, readingTime = 0, external = false } = Astro.props;
---

<li class="link-card">
	<a href={href} target={external ? "_blank" : undefined} rel={external ? "noopener noreferrer" : undefined}>
		<h2>{title} &rarr;</h2>
		{body && <p class="description">{body}</p>}
		<div class="meta">
			{date && <span class="date">{date.toLocaleDateString('zh-CN')}</span>}
			{readingTime > 0 && <span class="reading-time">{readingTime} ÂàÜÈíüÈòÖËØª</span>}
		</div>
		{tags && tags.length > 0 && (
			<div class="tags">
				{tags.map((tag) => (
					<span class="tag">{tag}</span>
				))}
			</div>
		)}
	</a>
</li>

<style>
	.link-card {
		position: relative;
		background: var(--c-card-bg);
		backdrop-filter: blur(12px) saturate(180%);
		-webkit-backdrop-filter: blur(12px) saturate(180%);
		border-radius: var(--radius-card);
		box-shadow: var(--shadow-light);
		transition: transform 0.3s ease, box-shadow 0.3s ease;
		overflow: hidden;
		border: 1px solid var(--c-card-border);
		list-style: none;
	}
	
	.link-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 100%;
		height: 4px;
		background: linear-gradient(90deg, var(--c-primary), var(--c-secondary));
		transform: scaleX(0);
		transform-origin: left;
		transition: transform 0.3s ease;
	}

	.link-card:hover {
		transform: translateY(-5px);
		box-shadow: var(--shadow-hover);
		background: rgba(255, 255, 255, 0.7);
		backdrop-filter: blur(16px) saturate(180%);
		-webkit-backdrop-filter: blur(16px) saturate(180%);
		border-color: rgba(255, 255, 255, 0.5);
	}

	.link-card:hover::before {
		transform: scaleX(1);
	}
	
	html[data-theme='dark'] .link-card {
		background: var(--c-card-bg);
		backdrop-filter: blur(12px) saturate(180%);
		-webkit-backdrop-filter: blur(12px) saturate(180%);
		border-color: var(--c-card-border);
	}

	html[data-theme='dark'] .link-card:hover {
		background: rgba(40, 42, 46, 0.6);
		backdrop-filter: blur(16px) saturate(180%);
		-webkit-backdrop-filter: blur(16px) saturate(180%);
		border-color: rgba(255, 255, 255, 0.15);
	}
	
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.5;
		padding: var(--padding-card);
		display: flex;
		flex-direction: column;
		height: 100%;
		color: var(--c-text);
	}
	
	h2 {
		margin: 0;
		font-size: 1.4rem;
		margin-bottom: 0.8rem;
		color: var(--c-text);
		transition: color 0.3s;
	}
	
	.link-card:hover h2 {
		color: var(--c-brand);
	}
	
	.description {
		margin: 0;
		margin-bottom: 1rem;
		color: var(--c-text-light);
		font-size: 1rem;
		line-height: 1.7;
		flex-grow: 1;
		display: -webkit-box;
		-webkit-line-clamp: 3;
		-webkit-box-orient: vertical;
		overflow: hidden;
		text-overflow: ellipsis;
	}
    
	.meta {
		font-size: 0.85rem;
		color: var(--c-text-light);
		margin-top: auto;
		display: flex;
		gap: 1rem;
		align-items: center;
	}

	.date {
		display: flex;
		align-items: center;
		gap: 0.3rem;
	}

	.date::before {
		content: 'üìÖ';
		font-size: 0.9rem;
	}

	.reading-time {
		display: flex;
		align-items: center;
		gap: 0.3rem;
	}

	.reading-time::before {
		content: '‚è±Ô∏è';
		font-size: 0.9rem;
	}

	.tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		margin-top: 1rem;
	}

	.tag {
		display: inline-block;
		padding: 0.3rem 0.8rem;
		background: rgba(56, 182, 255, 0.1);
		color: var(--c-primary);
		border-radius: 1rem;
		font-size: 0.8rem;
		font-weight: 500;
		transition: all 0.3s ease;
	}

	.tag:hover {
		background: rgba(56, 182, 255, 0.2);
		transform: translateY(-2px);
	}

	html[data-theme='dark'] .tag {
		background: rgba(56, 182, 255, 0.15);
		color: var(--c-primary-light);
	}

	html[data-theme='dark'] .tag:hover {
		background: rgba(56, 182, 255, 0.25);
	}
</style>